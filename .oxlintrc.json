{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "off", // "warn",
    "style": "off", // "warn",
    "perf": "off", // "warn",
    "pedantic": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "vitest": true
  },
  "ignorePatterns": [
    "packages/**",
    "apps/**",
    ".template/**",
    ".changeset/**",
    "**/*.grit",
    "**/dist/**",
    "**/build/**",
    "**/.turbo/**",
    "**/.next/**",
    "**/coverage/**",
    "**/node_modules/**"
  ],
  "plugins": [
    "eslint",
    "typescript",
    "unicorn",
    "oxc",
    // "vitest",
    "jsdoc",
    "import",
    "node",
  ]
}