{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "categories": {
    "correctness": "error",
    "suspicious": "warn",
    "style": "warn",
    "perf": "warn",
    "pedantic": "off"
  },
  "env": {
    "browser": true,
    "node": true,
    "vitest": true
  },
  "ignorePatterns": [
    "packages/**",
    "apps/**",
    ".template/**",
    ".changeset/**",
    "**/*.grit",
    "**/dist/**",
    "**/build/**",
    "**/.turbo/**",
    "**/.next/**",
    "**/coverage/**",
    "**/node_modules/**",
    "**/public/**"
  ],
  "plugins": [
    "eslint",
    "typescript",
    "unicorn",
    "oxc",
    // "vitest",
    "jsdoc",
    "import",
    "node",
  ],
  "rules": {
    "import/consistent-type-specifier-style": [
      "warn",
      "prefer-inline"
    ],
    "import/no-unassigned-import": [
      "warn",
      {
        "allow": [
          "**/*.css",
          "@instructure.ai/shared-configs/types"
        ]
      }
    ],
    "react/react-in-jsx-scope": "off",
    "unicorn/filename-case": [
      "warn",
      {
        "case": "camelCase"
      }
    ],
  }
}