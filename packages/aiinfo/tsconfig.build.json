{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": false,
		"emitDeclarationOnly": true,
		"jsx": "react-jsx",
		"moduleResolution": "Bundler",
		"noEmit": false,
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true
	},
	"exclude": ["**/*.test.*", "**/__tests__/**", "node_modules", "dist"],
	"extends": "./tsconfig.json",
	"include": ["src"]
}
