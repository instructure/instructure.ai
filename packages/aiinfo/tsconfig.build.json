{
	"compilerOptions": {
		"declaration": true,
		"declarationMap": false,
		"noEmit": false,
		"emitDeclarationOnly": true,
		"moduleResolution": "Bundler",
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true,
		"jsx": "react-jsx"
	},
	"exclude": ["**/*.test.*", "**/__tests__/**", "node_modules", "dist"],
	"extends": "./tsconfig.json",
	"include": ["src"]
}
