{
	"compilerOptions": {
		"declaration": true,
		"emitDeclarationOnly": true,
		"jsx": "react-jsx",
		"moduleResolution": "Bundler",
		"outDir": "dist",
		"rootDir": "src",
		"skipLibCheck": true
	},
	"exclude": [
		"**/*.test.*",
		"**/__tests__/**",
		"scripts/**",
		"utils/**",
		"dist/**",
		"**/*.config.*",
		"vite.config.*"
	],
	"extends": "./tsconfig.json",
	"include": ["src"]
}
